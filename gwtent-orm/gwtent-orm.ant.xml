<?xml version="1.0" encoding="utf-8" ?>
<project name="gwtent-orm" default="compile" basedir=".">
  <description>
    gwtent-orm build file.  This is used to package up your project as a jar,
    if you want to distribute it.  This isn't needed for normal operation.
  </description>

  <!-- set classpath -->
  <path id="project.class.path">
    <pathelement path="${java.class.path}/"/>
    <pathelement path="C:/eclipse/gwt-windows-1.5.0/gwt-user.jar"/>

    <!-- Additional dependencies (such as junit) go here -->
  </path>

  <target name="compile" description="Compile src to bin">
    <mkdir dir="bin"/>
    <javac srcdir="src:test" destdir="bin" includes="**" debug="on" debuglevel="lines,vars,source" source="1.4">
      <classpath refid="project.class.path"/>
    </javac>
  </target>

  <target name="package" depends="compile" description="Package up the project as a jar">
    <jar destfile="gwtent-orm.jar">
      <fileset dir="bin">
        <include name="**/*.class"/>
      </fileset>
      <!-- Get everything; source, modules, html files -->
      <fileset dir="src">
        <include name="**"/>
      </fileset>
      <fileset dir="test">
        <include name="**"/>
      </fileset>
    </jar>
  </target>

  <target name="clean">
    <!-- Delete the bin directory tree -->
    <delete file="gwtent-orm.jar"/>
    <delete>
      <fileset dir="bin" includes="**/*.class"/>
    </delete>
  </target>

  <target name="all" depends="package"/>
	
	  <target name="package and copy" depends="package">
	  	<copy file="gwtent-orm.jar" tofile="../gwtent-sample/lib/gwtent-orm.jar"></copy>
	  	<copy file="gwtent-orm.jar" tofile="C:/bglportal/thirdparty/lib/gwtent-orm.jar"></copy>
	  	<copy file="gwtent-orm.jar" tofile="C:/bglportal/appservers/jboss-5.0.0.GA/server/default/lib/gwtent-orm.jar"></copy>
	  	
	  </target>

</project>
